<h1>Leave Review for <%=@restaurant.name %></h1>

<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <p>Rating</p>
    <%= f.number_field :rating, max: 5 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
